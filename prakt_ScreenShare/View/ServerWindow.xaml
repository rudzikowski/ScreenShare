<Window x:Class="prakt_ScreenShare.View.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prakt_ScreenShare.View"
        mc:Ignorable="d"
        Title="ServerWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <Button Name="start_btn" Content="Start" Width="71" Click="start_click"/>
                <Button Name="stop_btn" Content="Stop" Width="71" Click="stop_click"/>
            </StackPanel>
            <Label Grid.Column="0" HorizontalAlignment="Left" x:Name="label_IP"/>
        </Grid>
        <Image x:Name="imageView" Margin="10,20,10,0" Source="{Binding _ImageSource}"/>
    </StackPanel>
</Window>
