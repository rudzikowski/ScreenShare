<Window x:Class="prakt_ScreenShare.View.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prakt_ScreenShare.View"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Content="Start" Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click" Margin="0,0,200,0" Name="btn_start"/>
        <Button Content="Stop" Width="100" Height="100" Click="Button_Click2" Name="btn_stop"/>
    </StackPanel>
</Window>
